<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtCourseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample Course"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonEdit"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:id="@+id/txtTimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        app:layout_constraintTop_toBottomOf="@id/txtCourseName"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtDisplayTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher Name"
        app:layout_constraintTop_toBottomOf="@id/txtTimeStart"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtStudentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidates:"
        app:layout_constraintTop_toBottomOf="@id/txtDisplayTeacherName"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtDisplayStudentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtDisplayTeacherName"
        app:layout_constraintStart_toEndOf="@+id/txtStudentLabel"/>

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@id/buttonDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>