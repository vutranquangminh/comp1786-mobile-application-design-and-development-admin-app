<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtTeacherName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TeacherName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonEdit"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:id="@+id/txtDateStartTeaching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartTeaching"
        app:layout_constraintTop_toBottomOf="@id/txtTeacherName"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience"
        app:layout_constraintTop_toBottomOf="@id/txtDateStartTeaching"
        app:layout_constraintStart_toEndOf="@+id/DisplayExperience"/>
    <TextView
        android:id="@+id/DisplayExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experiences: "
        app:layout_constraintTop_toBottomOf="@id/txtDateStartTeaching"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@id/buttonDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>